# ====================================
# PUERTOS LOCALES PARA DOCKER-COMPOSE
# ====================================
# Copia este archivo como .env y ajusta según tu entorno
# El archivo .env NO se sube a git (está en .gitignore)

# Puertos para Docker (cambiar si están ocupados en tu máquina)
BACKEND_PORT=3001
FRONTEND_PORT=5173
MYSQL_PORT=3307

# ====================================
# APLICACIÓN
# ====================================
PORT=3001
LOG_LEVEL=info
ALLOWED_ORIGINS=https://tu-dominio.com,http://localhost:3000,http://localhost:5173

# ====================================
# PANEL DE ADMINISTRACIÓN
# ====================================
ADMIN_USER=admin
ADMIN_PASS=TuPasswordSeguro123

# ====================================
# BASE DE DATOS MYSQL
# ====================================
# Para Docker (usar estos valores)
DB_HOST=mysql
DB_PORT=3306
DB_USER=dev
DB_PASS=dev123
DB_NAME=whatsapp_chat

# Para servidor (sin Docker, ajustar según tu BD)
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_USER=tu_usuario
# DB_PASS=tu_password
# DB_NAME=tu_base_datos

MYSQL_ROOT_PASSWORD=root123
DB_EXPOSE_PORT=3307

# ====================================
# API EXTERNA - SISTEMA PRINCIPAL
# ====================================
MAIN_API_BASE=https://tu-dominio.com/api

# ====================================
# RAG (Retrieval-Augmented Generation)
# ====================================
RAG_ENABLED=true

# ====================================
# WHATSAPP CLOUD API (Meta)
# ====================================
GRAPH_API_VERSION=v22.0
WABA_PHONE_NUMBER_ID=tu_phone_number_id
WABA_ID=tu_waba_id
META_ACCESS_TOKEN=tu_meta_access_token
META_VERIFY_TOKEN=tu_verify_token
META_APP_SECRET=tu_app_secret

# ====================================
# CHATBOT AI CONFIGURATION (OpenAI)
# ====================================
OPENAI_API_KEY=sk-proj-tu_openai_api_key
CHATBOT_MODE_DEFAULT=automatic
CHATBOT_AI_MODEL=gpt-4o-mini
CHATBOT_AI_TEMPERATURE=0.1
CHATBOT_AI_MAX_TOKENS=50
CHATBOT_AUTO_REPLY_DELAY=2000

# ====================================
# DETECCIÓN DE INTENCIONES Y ROUTING
# ====================================
INTENT_DETECT_ENABLED=true
INTENT_MIN_CONFIDENCE=0.6
ROUTING_ENABLED=true
ACTIONS_HOOK_URL=https://tu-endpoint-externo/accion
ACTIONS_HOOK_SECRET=tu_secreto_hmac

# ====================================
# FLUJOS VISUALES
# ====================================
VISUAL_FLOWS_ENABLED=true

# ====================================
# CHATBOT GLOBAL
# ====================================
CHATBOT_GLOBAL_ENABLED=false

# ====================================
# NOTAS
# ====================================
# - Reemplaza todos los valores "tu_*" con tus credenciales reales
# - NUNCA subas el archivo .env a Git
# - Para desarrollo local con Docker, usa los valores de DB por defecto
# - Para producción, ajusta DB_HOST, DB_USER, DB_PASS, DB_NAME según tu servidor
